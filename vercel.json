{
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://your-render-backend-url.onrender.com/api/$1"
        },
        {
            "source": "/socket.io/(.*)",
            "destination": "https://your-render-backend-url.onrender.com/socket.io/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}